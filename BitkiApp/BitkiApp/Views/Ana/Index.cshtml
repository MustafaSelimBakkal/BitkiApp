@model List<Cicek>
<head>
    <title>Bizim Botanik</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

    <div class="container mt-6 ">
        <div id="carouselExample" class="carousel slide">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/img/slider1.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/img/slider2.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/img/slider3.jpg" class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action active" aria-current="true">
                        Tüm Bitkiler
                    </a>
                    <a href="/Ana/Listele" class="list-group-item list-group-item-action">Yasaklı Bitkiler</a>
                    <a href="/Anasayfa" class="list-group-item list-group-item-action">Şifalı Bitkiler</a>
                    <a href="/Anasayfa" class="list-group-item list-group-item-action">Yabancı Bitkiler</a>
                </div>
            </div>

            <div class="col-md-9">
                <div class="row">
                    @foreach (var cicek in Model)
                    {
                        <div class="col-md-4">
                            <div class="card" style="width: 18rem;">
                                <img src="/img/@(cicek.Resim)" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title">@cicek.Ad</h5>
                                    <p class="card-text">@cicek.Aciklama</p>
                                    <a href="/Hakkinda" class="btn btn-primary">Detaya Git</a>
                                </div>
                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>
    </div>




</body>
